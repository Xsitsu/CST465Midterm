@model List<TestQuestion>

@{
    ViewData["Title"] = "TakeTest";
}

<h2>TakeTest</h2>

@using (Html.BeginForm("TakeTest", "Midterm", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    QuestionBank questionBank = new Midterm.Controllers.MidtermController().GetList();

    for (int i = 0; i < Model.Count; i++)
    {
        string type = questionBank.Questions[i].type;
        @Html.Partial(type, Model[i])
        
    }

    <button type="submit" class="btn btn-primary">Submit</button>
}