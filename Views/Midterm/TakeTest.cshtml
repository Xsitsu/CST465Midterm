@model List<TestQuestion>

@{
    ViewData["Title"] = "TakeTest";
}

<h2>TakeTest</h2>

@using (Html.BeginForm("TakeTest", "Midterm", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    for (int i = 0; i < Model.Count; i++)
    {
        @Html.LabelFor(m => m[i], new { @class = "control-label" })
        @Html.EditorFor(m => m[i], new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m[i])
    }

    <button type="submit" class="btn btn-primary">Submit</button>
}